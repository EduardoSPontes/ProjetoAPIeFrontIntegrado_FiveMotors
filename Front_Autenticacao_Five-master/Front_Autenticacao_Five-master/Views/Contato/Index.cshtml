@{
    ViewData["Title"] = "Contato";
    Layout = "/Views/Shared/_Layout_Contato.cshtml";
}

<div class="container py-5">
    <h1 class="text-center mb-4" style="color: #324156">Contato - FiveMotors</h1>
    <p class="text-center mb-5" style="color: #838383">Preencha o formulário abaixo e nossa equipe entrará em contato o mais rápido possível </p>

    <div class="row g-4">
   
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <form class="row g-3 needs-validation" novalidate>

                        <div class="form-floating col-12 mb-3">
                            <input type="text" class="form-control" id="nome" placeholder="Nome completo" required>
                            <label for="nome">Nome completo</label>
                        </div>

                        <div class="form-floating col-md-6 mb-3">
                            <input type="email" class="form-control" id="email" placeholder="seuemail@exemplo.com" required>
                            <label for="email">Email</label>
                        </div>

                        <div class="form-floating col-md-6 mb-3">
                            <input type="tel" class="form-control" id="telefone" placeholder="(11) 99999-9999" required>
                            <label for="telefone">Telefone</label>
                        </div>

                        <div class="form-floating col-md-6 mb-3">
                            <select class="form-select form-select-sm" id="interesse" required>
                                <option value="" selected disabled>Selecione</option>
                                <option>Agendar Test-Drive</option>
                                <option>Comprar Carro</option>
                                <option>Vender / Trocar Carro</option>
                                <option>Financeiro</option>
                                <option>Outro</option>
                            </select>
                            <label for="interesse">Assunto</label>
                        </div>

                        <div class="form-floating col-md-6 mb-3">
                            <select class="form-select form-select-sm" id="modelo">
                                <option value="" selected disabled>Selecione</option>
                                <option>Honda Civic</option>
                                <option>Toyota Corolla</option>
                                <option>Chevrolet Onix</option>
                                <option>Fiat Pulse</option>
                                <option>Jeep Compass</option>
                            </select>
                            <label for="modelo">Modelo de Interesse</label>
                        </div>

                        <div class="form-floating col-md-6 mb-3">
                            <select class="form-select form-select-sm" id="horario">
                                <option value="" selected disabled>Selecione</option>
                                <option>Manhã</option>
                                <option>Tarde</option>
                                <option>Noite</option>
                            </select>
                            <label for="horario">Melhor horário para contato</label>
                        </div>

                        <div class="form-floating col-12 mb-3">
                            <textarea class="form-control" id="mensagem" style="height: 120px;" placeholder="Digite sua mensagem"></textarea>
                            <label for="mensagem">Mensagem</label>
                        </div>

                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-success  px-4 me-2">
                               Enviar
                            </button>
                            <button type="reset" class="btn btn-danger  px-4 ms-2" >
                                 Apagar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


 
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body p-4 text-center">
                    <h4 class="mb-3">📍 Nos Encontre</h4>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18..."
                            width="100%" height="400" style="border:0; border-radius: 12px;"
                            allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>

 
</div>
