@{
    ViewData["Title"] = "Quem Somos";
    Layout = "/Views/Shared/_Layout_QuemSomos.cshtml";
}


<div style="position: relative; width: 100vw; height: 100vh; overflow: hidden; margin: 0; padding: 0;">

    <img src="img/QuemSomos01.jpg"
         alt="Imagem principal"
         style="width: 100%; height: 100%; object-fit: cover; display: block; margin: 0; padding: 0;" />

    <div style="position: absolute; top: 20%; left: 50%; transform: translateX(-50%); text-align: center; color: white; width: 90%;">
        <h1 style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 2.5rem; margin: 0;">
            Bem-vindo(a) à era FiveMotors!
        </h1>
    </div>


    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
                display: flex; justify-content: center; align-items: flex-start; width: 90%; color: white; gap: 40px;">

       
        <div style="flex: 1; max-width: 50%; text-align: center;">
            <p style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 1.1rem; margin: 0;">
                A FiveMotors é uma empresa especializada na compra e venda de veículos com foco em qualidade,
                transparência e confiança.
            </p>
        </div>

       
        <div style="flex: 1; max-width: 50%; text-align: center;">
            <p style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 1.1rem; margin: 0;">
                Com uma equipe apaixonada por carros, a FiveMotors se destaca no mercado automotivo
                por sua dedicação ao cliente, compromisso com a segurança dos veículos e agilidade nos processos de negociação.
            </p>
        </div>
    </div>
</div>
